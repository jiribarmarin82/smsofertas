<?xml version='1.0' encoding='utf-8'?>
<widget id="com.smsofertas.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SmsOfertas</name>
    <description>
        Aplicacion de gestion de ofertas
    </description>
    <author email="tu@email.com" href="http://tusitio.com">
        Tu Nombre
    </author>
    <content src="index.html" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
        </platform>
</widget>